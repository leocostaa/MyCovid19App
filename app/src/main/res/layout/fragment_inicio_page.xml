<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentInicioPage" >

    <Button
        android:id="@+id/buttonPacientes"
        android:layout_width="197dp"
        android:layout_height="163dp"
        android:layout_margin="8dp"
        android:background="@drawable/local"
        android:text="Pacietes"
        app:backgroundTint="?android:attr/textColorHighlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/buttonLocais"
        android:layout_width="197dp"
        android:layout_height="163dp"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/local"
        android:text="Locais"
        app:backgroundTint="?attr/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/buttonVacinacoes"
        android:layout_width="197dp"
        android:layout_height="163dp"
        android:layout_margin="8dp"
        android:background="@drawable/vacinacao"
        android:text="Vacinações"
        app:backgroundTint="?android:attr/textColorLink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPacientes"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonVacina"
        android:layout_width="197dp"
        android:layout_height="163dp"
        android:layout_margin="8dp"
        android:background="@drawable/vacina"
        android:text="Vacinas"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonVacinacoes"
        app:layout_constraintTop_toBottomOf="@+id/buttonLocais"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="408dp"
        android:layout_height="43dp"
        android:layout_margin="0dp"
        android:gravity="center|top"
        android:text="MyCovid19App"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="410dp"
        android:layout_height="292dp"
        android:src="@drawable/vacina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>